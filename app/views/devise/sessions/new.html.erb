<div class="row">
  <div class="col-md-6 offset-md-3">
    <h2 class="text-center"><%= t(".log_in") %></h2>
    <%= form_for(resource, as: resource_name, 
      url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, t(".email"), class: "text-info" %>
        <%= f.email_field :email, autofocus: true, autocomplete: 
          t(".email"), placeholder: t(".email"), class: "form-control" %>
      </div>

      <div class="field mt-3">
        <%= f.label :password, t(".password"), class: "text-info" %>
        <%= f.password_field :password, autocomplete: "current-password",
          placeholder: t(".password"), class: "form-control" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field mt-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "ml-1 text-muted" %>
        </div>
      <% end %>

      <div class="actions mt-3">
        <%= f.submit t(".log_in"), 
          class: "btn btn-outline-primary form-control" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
