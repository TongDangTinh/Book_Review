<div class="row">
  <div class="col-md-4">
    <%= image_tag @book.book_img.url(:book_show), class: "book_show" %>
  </div>
  <div class="col-md-8">
    <h2><%= @book.title %></h2>
    <h3><%= @book.author %></h3>
    <h4>Category: <%= @book.category.name %></h4>
    <p><%= @book.description %></p>
  </div>
</div>
<div class="row">
  <div class="col-md-4">
    <!-- Where the reviews/ratings will go -->
  </div>
</div>
<%= link_to t(".back"), root_path %>
<% if user_signed_in? %>
  <% if @book.user_id == current_user.id %>
    <%= link_to t(".edit"), edit_book_path(@book) %>
    <%= link_to t(".delete"), book_path(@book), method: :delete, 
      data: { confirm: t(".are_you_sure") } %>
  <% end %>
<% end %>
