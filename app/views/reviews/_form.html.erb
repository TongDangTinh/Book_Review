<%= form_for([@book, @book.reviews.build]) do |f| %>

  <div id="rating-form" class="field">
    <%= f.label :rating %>
  </div>
  <div class="field">
    <%= f.label :comment %>
    <%= f.text_field :comment, class: "form-control" %>
  </div>
  
  <div class="field mt-3">
    <%= f.submit "Create comment", class: "btn btn-custom" %>
  </div>
  
<% end %>

<script>
  $('#rating-form').raty({
    path: '/assets/',
    scoreName: 'review[rating]'
  });
</script>
