<% if @book.errors.any? %>
  <div class="row">
    <div class="col-md-12">
        The form contains <%= pluralize(@book.errors.count, "error") %>.
      <ul>
        <% @book.errors.full_messages.each do |msg| %>
          <li class="text-danger"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
